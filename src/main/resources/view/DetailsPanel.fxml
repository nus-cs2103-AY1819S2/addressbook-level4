   <left>
      <Button id="prevBtn" fx:id="prevBtn" mnemonicParsing="false" prefHeight="70.0" prefWidth="78.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin></Button>
   </left>
   <right>
      <Button id="nextBtn" fx:id="nextBtn" mnemonicParsing="false" prefHeight="70.0" prefWidth="78.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets right="10.0" />
         </BorderPane.margin></Button>
   </right>
   <center>
      <StackPane fx:id="informationPanel" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </StackPane>
   </center>
</BorderPane>
