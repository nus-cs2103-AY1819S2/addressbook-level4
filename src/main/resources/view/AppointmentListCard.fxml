<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label"/>
                <Label text="Status:" />
                <Label fx:id="status" styleClass="cell_small_label" text="\$status" />
            </HBox>
            <HBox>
                <Label text="Patient ID: " />
                <Label fx:id="patientId" styleClass="cell_small_label" text="\$patientId" />
            </HBox>
            <HBox>
                <Label text="Patient name: " />
                <Label fx:id="patientName" styleClass="cell_small_label" text="\$patientName" />
            </HBox>
            <HBox>
                <Label text="Doctor ID: " />
                <Label fx:id="doctorId" styleClass="cell_small_label" text="\$doctorId" />
            </HBox>
            <HBox>
                <Label text="Doctor name: " />
                <Label fx:id="doctorName" styleClass="cell_small_label" text="\$doctorName" />
            </HBox>
            <HBox>
                <Label text="Date: " />
                <Label fx:id="date" styleClass="cell_small_label" text="\$date" />
            </HBox>
            <HBox>
                <Label text="Time: " />
                <Label fx:id="time" styleClass="cell_small_label" text="\$time" />
            </HBox>
        </VBox>
    </GridPane>
</HBox>
