<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.GridPane?>
<GridPane id="cardPage" fx:id="cardPage" styleClass="background-card" stylesheets="@DarkTheme.css" xmlns:fx="http://javafx.com/fxml/1">
  <padding><Insets top="25" bottom="25"/></padding>
  <Label fx:id="cardQuestion" styleClass="label-header" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER" textAlignment="CENTER">
  </Label>
  <Label fx:id="answer" styleClass="label-bright" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER" wrapText="true">
  </Label>
  <Label fx:id="options" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="CENTER" wrapText="true">
  </Label>
  <Label fx:id="hint" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="CENTER">
  </Label>
  <Label fx:id="score" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="CENTER">
  </Label>
</GridPane>
