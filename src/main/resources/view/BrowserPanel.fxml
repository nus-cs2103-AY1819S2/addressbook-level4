<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fx:id="cardScrollPane" styleClass="scroll-pane" fitToHeight="true" fitToWidth="true" vbarPolicy="ALWAYS" stylesheets="@DarkTheme.css" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane id="cardPage" fx:id="cardPage" styleClass="background-card" stylesheets="@DarkTheme.css" alignment="center"
          hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets top="25" bottom="25"/></padding>
    <Label fx:id="cardQuestion" styleClass="label-card" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER">
    </Label>
    <Label fx:id="hint" styleClass="label-card" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER">
    </Label>
    <Label fx:id="answer" styleClass="label-card" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.halignment="CENTER">
    </Label>
    <Label fx:id="options" styleClass="label-card" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="CENTER">
    </Label>
    <Label fx:id="score" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="CENTER">
    </Label>
  </GridPane>
</ScrollPane>
